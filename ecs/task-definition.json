  "taskRoleArn": "arn:aws:iam::810772959397:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "small-business-invoices",
      "image": "810772959397.dkr.ecr.eu-north-1.amazonaws.com/small-business-invoices:latest",
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
